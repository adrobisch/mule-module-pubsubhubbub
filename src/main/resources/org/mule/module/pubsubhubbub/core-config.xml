<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:jersey="http://www.mulesoft.org/schema/mule/jersey"
  xmlns:http="http://www.mulesoft.org/schema/mule/http"
  xmlns:test="http://www.mulesoft.org/schema/mule/test"
  xmlns:spring="http://www.springframework.org/schema/beans"
  xmlns:util="http://www.springframework.org/schema/util"
  xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="
       http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/3.2/mule.xsd
       http://www.mulesoft.org/schema/mule/jersey http://www.mulesoft.org/schema/mule/jersey/3.2/mule-jersey.xsd
       http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/3.2/mule-http.xsd
       http://www.mulesoft.org/schema/mule/test http://www.mulesoft.org/schema/mule/test/3.2/mule-test.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">
       
  <!-- TODO combine these loose Spring Beans in a single PuSH configuration artifact -->
  <spring:beans>
    <spring:bean id="dataStore"
                 class="org.mule.module.pubsubhubbub.data.DataStore"
                 p:objectStore-ref="pushObjectStore" />
                 
    <spring:bean id="feedFetcher"
                 class="org.mule.module.pubsubhubbub.rome.PerRequestUserAgentHttpClientFeedFetcher"
                 p:preserveWireFeed="true"
                 p:feedInfoCache-ref="dataStore" />
                 
    <spring:bean id="hubActionHandler"
                 abstract="true"
                 p:dataStore-ref="dataStore"
                 p:retryPolicyTemplate-ref="pushRetryPolicyTemplate" />
                 
    <spring:bean id="subscriptionHandler"
                 parent="hubActionHandler"
                 class="org.mule.module.pubsubhubbub.handler.SubscriptionHandler" />
                 
    <spring:bean id="unsubscriptionHandler"
                 parent="hubActionHandler"
                 class="org.mule.module.pubsubhubbub.handler.UnsubscriptionHandler" />
                 
    <spring:bean id="publisherHandler"
                 parent="hubActionHandler"
                 class="org.mule.module.pubsubhubbub.handler.PublisherHandler"
                 p:feedFetcher-ref="feedFetcher" />
                 
    <util:map id="handlers">
        <spring:entry key="#{T(org.mule.module.pubsubhubbub.HubMode).SUBSCRIBE}"
                      value-ref="subscriptionHandler" />
        <spring:entry key="#{T(org.mule.module.pubsubhubbub.HubMode).UNSUBSCRIBE}"
                      value-ref="unsubscriptionHandler" />
        <spring:entry key="#{T(org.mule.module.pubsubhubbub.HubMode).PUBLISH}"
                      value-ref="publisherHandler" />
    </util:map>
  
    <spring:bean id="hubResource"
                 class="org.mule.module.pubsubhubbub.HubResource"
                 p:handlers-ref="handlers" />
  </spring:beans>
  
  <flow name="pushHubResources">
    <jersey:resources>
      <component>
        <spring-object bean="hubResource" />
      </component>
      <jersey:exception-mapper class="org.mule.module.pubsubhubbub.HubExceptionMapper" />
    </jersey:resources>
  </flow>
</mule>